<resources>
    <!-- Base application theme. -->
    <style name="Theme.MaxShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlack</item>

        <item name="colorPrimaryVariant">@color/colorRed</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/colorRed</item>
        <item name="colorSecondary">@color/colorTeal_200</item>
        <item name="colorSecondaryVariant">@color/colorTeal_700</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="Theme.MaxShop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>