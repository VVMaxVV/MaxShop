<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_bold</item>
        <item name="android:textSize">@dimen/sp_normal_200</item>
    </style>

    <style name="Headline_2" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:textSize">@dimen/sp_normal_150</item>
    </style>

    <style name="Headline_3" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:textSize">@dimen/sp_normal_125</item>
    </style>

    <style name="Description" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:textSize">@dimen/sp_normal_100</item>
    </style>

    <style name="Regular_12sp" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:textSize">@dimen/sp_normal_75</item>
    </style>

    <style name="Regular_16sp" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:textSize">@dimen/sp_normal_100</item>
    </style>

    <style name="SemiBold_16sp" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:textSize">@dimen/sp_normal_100</item>
    </style>

    <style name="Medium_16sp" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/metropolis_medium</item>
        <item name="android:textSize">@dimen/sp_normal_100</item>
    </style>

    <style name="ToggleChangeDisplayItems">
        <item name="android:background">@drawable/selector_toggle_change_display_items</item>
        <item name="android:layout_width">@dimen/normal_100</item>
        <item name="android:layout_height">@dimen/normal_75</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="ToggleFavorite" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">@dimen/normal_225</item>
        <item name="android:layout_height">@dimen/normal_225</item>
        <item name="android:background">@drawable/selector_toggle_favorite</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/red_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="elevation">@dimen/normal_50</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_custom</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">@dimen/normal_100</item>
        <item name="android:maxHeight">@dimen/normal_100</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="ProductOptionButton" parent="Medium_16sp">
        <item name="android:background">@drawable/product_options_menu</item>
        <item name="android:paddingStart">@dimen/normal_75</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_dropdown_arrow</item>
        <item name="android:paddingEnd">@dimen/normal_75</item>
        <item name="android:layout_width">@dimen/normal_875</item>
        <item name="android:layout_height">@dimen/normal_250</item>
    </style>

    <style name="LineProductOptionMenu">
        <item name="android:background">@drawable/shape_product_option_line</item>
        <item name="android:layout_width">@dimen/normal_375</item>
        <item name="android:layout_height">@dimen/normal_25</item>
    </style>

</resources>