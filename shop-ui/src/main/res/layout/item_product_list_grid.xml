<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewState"
            type="com.maxshop.viewState.PLPItemViewState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/normal_1000"
            android:layout_height="@dimen/normal_0"
            android:layout_marginTop="@dimen/normal_100"
            android:src="@{viewState.imageUrl}"
            app:layout_constraintDimensionRatio="@string/ratio_plp_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_error" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rating_bar"
            style="@style/CustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_50"
            android:rating="@{viewState.rating}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            tools:rating="4.3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/review_counter"
            style="@style/Regular_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/review_counter(viewState.ratingCount)}"
            app:layout_constraintBottom_toBottomOf="@id/rating_bar"
            app:layout_constraintStart_toEndOf="@id/rating_bar"
            app:layout_constraintTop_toTopOf="@+id/rating_bar"
            app:layout_goneMarginStart="@dimen/normal_12"
            tools:text="(100)" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_text_view"
            style="@style/SemiBold_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_50"
            android:lines="2"
            android:text="@{viewState.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_bar"
            tools:text="T-Short" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price_text_view"
            style="@style/Medium_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_12"
            android:text="@{@string/price(viewState.price)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            tools:text="11$" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>